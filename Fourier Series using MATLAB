% Plot the series: x(t)=0.5-(1 /pi)*sum[n=1==>inf.](sin(2*n*pi*t)/n)


subplot(3,2,1);

to=5; %interval range +/- to

tPts=500; % # of points in time

t=linspace(-to, to, tPts);

nPts=1000; % # of terms in each sum

DC=0.5; % dc component

const=8/((pi)^2); % constant multiplying the sum

AC=zeros(1, tPts); % AC component

for k=1: tPts

sum=0;

for n=1: nPts

sum=sum+(cos((n*pi*t(k))/2))/n^2-(cos((n*pi*t(k))/2))*(cos((n*pi)/2))/n^2;

end

AC(k)=sum;

end

x=DC+const*AC;

p1=plot(t,x,'linewidth',2);

title('The Fourier series of the waveform')


lgd=legend([p1],{'n=1'},'Location','northeast','NumColumns',1);

title(lgd,'# of terms')


